<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5mdp"
    android:padding="@dimen/_5mdp"
    android:background="@drawable/border_background_corners"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5mdp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/candidateImg"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            app:civ_border_width="@dimen/_1mdp"
            app:civ_border_color="@color/icon_color"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10mdp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/candidateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12font_mdp"
                android:text="Candidate Name"/>
            <TextView
                android:id="@+id/uploadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/public_24"
                android:drawablePadding="@dimen/_5mdp"
                android:textSize="@dimen/_10font_mdp"
                android:text="Public Figure | 3 min ago"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_11font_mdp"
        android:padding="@dimen/_5mdp"
        android:text="Caption Requirements"/>
    <LinearLayout
        android:id="@+id/imgSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5mdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120mdp"
            android:layout_weight="1"
            android:src="@color/greenDark"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_1mdp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@color/icon_color"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_1mdp"
                android:src="@color/black"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1mdp"
        android:background="@color/darkGray"
        android:layout_margin="@dimen/_5mdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/likeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/_10font_mdp"
            android:textColor="@color/black"
            android:text="12 Likes"/>
        <LinearLayout
            android:id="@+id/wishListLin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/border_background_corners"
            android:padding="@dimen/_3mdp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">
            <com.like.LikeButton
                android:id="@+id/wishListBtn"
                android:layout_height="@dimen/_15mdp"
                android:layout_width="@dimen/_15mdp"
                app:anim_scale_factor="10"
                app:circle_end_color="@color/red"
                app:circle_start_color="@color/mainColor"
                app:dots_primary_color="@color/light_main"
                app:dots_secondary_color="@color/blue_purple"
                app:icon_size="25dp"
                app:icon_type="Star"
                app:is_enabled="true"
                app:like_drawable="@drawable/favorite_added_24"
                app:liked="false"
                app:unlike_drawable="@drawable/favorite_24" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/border_background_corners"
            android:padding="@dimen/_3mdp"
            android:layout_marginStart="@dimen/_5mdp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">
            <ImageView
                android:layout_width="@dimen/_15mdp"
                android:layout_height="@dimen/_15mdp"
                android:src="@drawable/share_24"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>